{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "DEFAULT_MINIMUM_TOKENS": ""
      }
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@0.0.38",
        "--browser=chromium"
      ],
      "alwaysAllow": [
        "browser_console_messages",
        "browser_snapshot",
        "browser_navigate",
        "browser_close",
        "browser_click"
      ]
    }
  }
}